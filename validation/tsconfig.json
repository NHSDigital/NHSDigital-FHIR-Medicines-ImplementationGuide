{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es2019"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@models": ["../../../models"],
      "@coordinator": ["../../../coordinator"]
    }
  },
  "include": [
    "specs/**/*",
    "."
  ],
  "references": [
    {
      "path": "../../../models"
    },
    {
      "path": "../../../coordinator"
    }
  ],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}
